@model TBAM.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "_Login";
}

<style>
    .bg-image {
        background-image: url('/assets/7.jpg');
        background-size: cover;
        background-position: center;
        filter: blur(5px);
        -webkit-filter: blur(5px);
        height: 100vh;
        width: 100vw;
        position: absolute;
        top: 0;
        left: 0;
        z-index: -1;
    }

    .card {
        background-color: rgba(255, 255, 255, 0.8); /* Add a white background with 80% opacity */
        border: none;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    .card-header {
        background-color: #3498db; /* A blue-ish color to match the background image */
        color: #fff;
        padding: 10px;
        border-bottom: none;
    }

    .card-body {
        padding: 20px;
    }

    .form-control {
        border: 1px solid #ccc;
        border-radius: 5px;
        padding: 10px;
        font-size: 16px;
    }

    .btn-primary {
        background-color: #3498db; /* A blue-ish color to match the background image */
        border-color: #3498db;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
    }

    .btn-primary:hover {
        background-color: #2980b9; /* A darker blue-ish color on hover */
        border-color: #2980b9;
    }
</style>

<div class="bg-image"></div>

<div class="container flex justify-content-center items-center" style="position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">TBAM</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.Password, new { @class = "col-form-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary btn-block">Log in</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>