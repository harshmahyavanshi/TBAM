@model TBAM.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "_Login";
}

<div class="container flex justify-content-center items-center" style="position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">Login</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-form-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group mb-4">
                            @Html.LabelFor(m => m.Password, new { @class = "col-form-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary btn-block">Login</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
